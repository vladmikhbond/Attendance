@page
@model Attendance50.Pages.Checks.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Check[0].When)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Check[0].Raw)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Check[0].Flow)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Check) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.When)
            </td>
            <td>
                @(item.Raw == null || item.Raw.Length < 50 ? item.Raw : item.Raw.Substring(0, 50) + "...")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Flow.Name)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
